{
	"analysis": {
		"analyzer": {
			"symphony_fulltext" : {                    
				"type": "custom",
				"tokenizer" : "standard",
				"filter": ["stop", "asciifolding", "snowball", "lowercase", "custom_synonyms", "custom_stop"]
			},
			"symphony_autocomplete" : {                    
				"type": "custom",
				"tokenizer" : "standard",
				"filter": ["asciifolding", "lowercase"]
			}
		},
		"filter" : {
			"custom_synonyms": {
				"type": "synonym",
				"ignore_case": "true",
				"synonyms": [
					// todo: make these more sensible
					"i-pod, i pod => ipod",
					"nick => loser"
				]
			},
			"custom_stop": {
				"type": "stop",
				// todo: make these more sensislbe
				"stopwords": ["airlock", "poo"]
			}
		}
	}
}